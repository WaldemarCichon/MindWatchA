<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Statistik"
			android:textSize="20dp"
			android:textStyle="bold"
			android:textAlignment="center"/>
		<RadioGroup
			android:gravity="center_horizontal"
			android:orientation="horizontal"
			android:id="@+id/interval_radio_group"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<RadioButton
				android:id="@+id/statistic_day"
				android:layout_marginRight="30dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tag"/>
			<RadioButton
				android:id="@+id/statistic_week"
				android:layout_marginRight="20dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Woche"/>
			<RadioButton
				android:id="@+id/statistic_month"
				android:layout_marginRight="18dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Monat"/>
			<RadioButton
				android:id="@+id/statistic_year"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Jahr"/>
		</RadioGroup>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Com.Syncfusion.Charts.SfChart
				android:layout_weight="1"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="0dp"
				android:layout_height="500dp"
				android:id="@+id/sfChart1"
				app:titleText="Fragen"
				app:titleSize="24"
		
		/>
			<Com.Syncfusion.Charts.SfChart
				android:layout_weight="1"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_width="0dp"
				android:layout_height="500dp"
				android:id="@+id/sfChart2"
				app:titleText="Aufgaben"
				app:titleSize="24"
		/>
		</LinearLayout>
		<Com.Syncfusion.Charts.SfChart
			app:titleSize="24"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="500dp"
			android:id="@+id/sfChart3"
			app:titleText="Gemütszustand"
		
		/>

	</LinearLayout>
</ScrollView>