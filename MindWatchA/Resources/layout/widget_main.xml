<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"	
	>

	<include
		android:id="@+id/main_include"
		layout="@layout/content_main"
	/>

	<ImageView
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:src="@drawable/widget_frame"
		android:scaleType="fitXY"
		android:contentDescription="Outer Frame"
		>
	</ImageView>
	<ImageView
		android:id="@+id/happy_widget"
		android:contentDescription="description"
		android:layout_width="45dp"
		android:layout_height="45dp"
		android:layout_marginLeft="30dp"
		android:src="@drawable/happy_img"
		android:clickable="true"
		android:layout_alignParentBottom="true"
		android:layout_alignParentStart="true"
		android:layout_marginBottom="10px"
		/>

	<ImageView
		android:id="@+id/neutral_widget"
		android:contentDescription="description"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/neutral_img"
		android:clickable="true"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="10px"
		/>

	<ImageView
		android:id="@+id/sad_widget"
		android:contentDescription="description"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/bad_img"
		android:clickable="true"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_marginRight="30dp"
		android:layout_marginBottom="10px"
		/>

	<LinearLayout
		android:id="@+id/questionTaskButtons"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:orientation="horizontal"
		android:gravity="bottom"
		android:layout_alignParentBottom="true"
		android:visibility="visible">
		<ImageView
			android:id="@+id/ok_widget"
			android:contentDescription="description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:maxHeight="50dp"
			android:layout_weight="2"
			android:src="@drawable/accept_img"
			android:clickable="true"
			android:layout_alignParentBottom="true"
			android:layout_alignParentStart="true"
			android:layout_marginBottom="10px"
			android:layout_marginLeft="80px"
			android:visibility="gone"
		/>

		<ImageView
			android:id="@+id/later_widget"
			android:contentDescription="description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:maxHeight="50dp"
			android:layout_weight="2"
			android:src="@drawable/save_img"
			android:clickable="true"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="10px"
			android:visibility="gone"
		/>

		<ImageView
			android:id="@+id/no_widget"
			android:contentDescription="description"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:maxHeight="50dp"
			android:layout_weight="2"
			android:src="@drawable/decline_img"
			android:clickable="true"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:layout_marginBottom="10px"
			android:visibility="gone"
		/>
		<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginBottom="20px"
			android:layout_marginRight="10px"
			android:orientation="vertical"
			android:gravity="right">
			<TextView
				android:layout_gravity="center_horizontal"
				android:id="@+id/points_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:text="50000"
				android:textColor="@android:color/white"
				android:visibility="gone"/>
			<ImageView
				android:layout_gravity="center_horizontal"
				android:id="@+id/money_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/points"
				android:contentDescription="description"
				android:visibility="gone"/>
			</LinearLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/back_widget"
		android:contentDescription="description"
		android:layout_width="wrap_content"
		android:layout_height="100px"
		android:src="@drawable/back"
		android:clickable="true"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="20px"
		android:visibility="gone"
		/>

	<ImageView
		android:id="@+id/info_widget"
		android:text="Info"
		android:contentDescription="Info"
		android:layout_width="200px"
		android:layout_height="100px"
		android:layout_margin="50px"
		android:src="@android:drawable/ic_dialog_info"
		android:layout_centerInParent="true"
		android:layout_alignParentBottom="true"
		android:visibility="gone"
        />
</RelativeLayout>
