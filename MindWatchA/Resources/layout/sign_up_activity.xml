<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="15dp"
	android:paddingRight="15dp"
	android:background="@drawable/gradient"
	android:foregroundGravity="center_horizontal|bottom"
    >
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="center"
		android:text="Benutzer einrichten"
		android:textSize="24dp"
		android:textStyle="bold"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_marginTop="50dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Vorname:"
					android:textSize="18dp"/>
				<EditText
					android:id="@+id/first_name"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:inputType="text"
					android:textSize="18dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Nachname:"
					android:textSize="18dp"/>
				<EditText
					android:id="@+id/last_name"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:inputType="text"
					android:textSize="18dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Mailadresse:"
					android:textSize="18dp"/>
				<EditText
					android:id="@+id/mail_address"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:inputType="textEmailAddress"
					android:textSize="18dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Passwort:"
					android:textSize="18dp"/>
				<EditText
					android:id="@+id/password1"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:inputType="textPassword"
					android:textSize="18dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Wiederholung:"
					android:textSize="18dp"/>
				<EditText
					android:id="@+id/password2"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:inputType="textEmailAddress"
					android:textSize="18dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="20dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Geschlecht:"
					android:textSize="18dp"/>
				<RadioGroup
					android:id="@+id/gender_radio_group"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:orientation="vertical">
					<RadioButton
						android:id="@+id/male"
						android:layout_marginRight="10dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Männlich"
				/>
					<RadioButton
						android:id="@+id/female"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Weiblich"
				/>
					<RadioButton
						android:id="@+id/divers"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Divers"
				/>
					<RadioButton
						android:id="@+id/none"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="k.A."
						android:checked="true"
				/>
				</RadioGroup>
			</LinearLayout>
			<LinearLayout
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="Geburtsdatum:"
					android:textSize="18dp"/>
				<EditText
					android:id="@+id/birtday"
					android:layout_width="1px"
					android:layout_height="wrap_content"
					android:layout_weight="4"
					android:inputType="date"
					android:textSize="18dp"/>
			</LinearLayout>
			<TextView
				android:id="@+id/terms_of_serices_link_textview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="@string/terms_of_service_link"/>
			<CheckBox
				android:id="@+id/confirm_terms_of_services_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Ich akzeptiere die Nutzungsbedingungen."
				/>

			<TextView
				android:id="@+id/privacy_policy_link_textview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="@string/privacy_policy_link"/>
			<CheckBox
				android:id="@+id/confirm_privacy_policy_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="Ich akzeptiere die Datenschutzbedingungen."
				/>
			<Button
				android:id="@+id/create_user"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:text="Benutzer Anlegen"
	    />
		</LinearLayout>
	</ScrollView>

</LinearLayout>
